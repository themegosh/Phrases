<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta content="" name="description" />
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/layout.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/components-md.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/plugins-md.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/todo.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/blue.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/rzslider.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/FontAwesome/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/simple-line-icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/bootstrap-switch.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Theme/toastr.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/custom.css" rel="stylesheet" type="text/css" />

    <link rel="shortcut icon" href="favicon.ico" />
</head>
<body ng-app="MyVoice" ng-controller="PhraseController" ng-init="init()" class="page-header-fixed page-sidebar-closed-hide-logo page-container-bg-solid page-md page-sidebar-fixed">
    <!-- BEGIN HEADER -->
    <div class="page-header navbar navbar-fixed-top">
        <!-- BEGIN HEADER INNER -->
        <div class="page-header-inner ">
            <!-- BEGIN LOGO -->
            <div class="page-logo">
                <a href="/">
                    <span>MyVoice</span>
                </a>
                <div class="menu-toggler sidebar-toggler hide">
                    <!-- DOC: Remove the above "hide" to enable the sidebar toggler button on header -->
                </div>
            </div>
            <!-- END LOGO -->
            <form class="nav-search" ng-submit="btnCreateNewPhrase()">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="newPhrase.Text" placeholder="Type a Phrase..." />
                    <span class="input-group-btn">
                        <button type="button" ng-click="btnCreateNewPhrase()" class="btn btn-primary"><i class="fa fa-floppy-o" aria-hidden="true"></i> Save</button>
                    </span>
                </div>
            </form>
        </div>
        <!-- END HEADER INNER -->
    </div>
    <!-- END HEADER -->
    <!-- BEGIN HEADER & CONTENT DIVIDER -->
    <div class="clearfix"> </div>
    <!-- END HEADER & CONTENT DIVIDER -->
    <!-- BEGIN CONTAINER -->
    <div class="page-container">
        <!-- BEGIN SIDEBAR -->
        <div class="page-sidebar-wrapper">
            <!-- END SIDEBAR -->
            <div class="page-sidebar">
                <!-- BEGIN SIDEBAR MENU -->
                <ul class="page-sidebar-menu  page-header-fixed page-sidebar-menu-hover-submenu ">
                    <li class="nav-item start " ng-click="changeFilter('All')" ng-class="{active: tagFilter == 'All'}">
                        <a class="nav-link nav-toggle">
                            <i class="icon-directions"></i>
                            <span class="title">All</span>
                            <span class="arrow"></span>
                        </a>
                    </li>
                    <li class="nav-item start " ng-class="{active: tagFilter == tag}" ng-repeat="tag in allTags">
                        <a ng-click="changeFilter(tag)" class="nav-link nav-toggle">
                            <i class="icon-tag"></i>
                            <span class="title">{{tag}}</span>
                            <span class="arrow"></span>
                        </a>
                    </li>
                </ul>
                <!-- END SIDEBAR MENU -->
            </div>
            <!-- END SIDEBAR -->
        </div>
        <!-- END SIDEBAR -->
        <!-- BEGIN CONTENT -->
        <div class="page-content-wrapper">
            <!-- BEGIN CONTENT BODY -->
            <div class="page-content">
                @RenderBody()
            </div>
            <!-- END CONTENT BODY -->
        </div>
        <!-- END CONTENT -->
    
    </div>
    <!-- END CONTAINER -->
    <!-- BEGIN FOOTER -->
    <div class="page-footer text-center">
        <div class="page-footer-inner">
            @DateTime.Now.Year &copy; DMDev.ca 
            <div class="scroll-to-top">
                <i class="icon-arrow-up"></i>
            </div>
        </div>
    </div>

    <div class="bottom-music-bar">
        <div class="navbar navbar-default navbar-fixed-bottom">
            <div class="seekWrapper" seek-track>
                <div class="seekProgress" ng-style="{width : ( progress + '%' ) }"></div>
            </div>
            <div class="container-fluid nowrap-elipsis">
                <button type="button" class="btn btn-default navbar-btn" play-pause-toggle data-play='<i class="fa fa-play" aria-hidden="true"></i>' data-pause='<i class="fa fa-pause" aria-hidden="true"></i>'><i class="fa fa-play" aria-hidden="true"></i></button>
                <button type="button" class="btn btn-default navbar-btn" ng-click="btnChangeVolume()"><i class="fa fa-volume-up" aria-hidden="true"></i></button>
                <span class="nowrap-elipsis">
                    <span class="playing-info">
                        <strong>Playing:</strong> {{ currentPlaying.title }}
                    </span>
                </span>
            </div>
        </div>
    </div>

    <!-- END FOOTER -->
    <!--[if lt IE 9]>
    <script src="~/Scripts/Theme/respond.min.js"></script>
    <script src="~/Scripts/Theme/excanvas.min.js"></script>
    <![endif]-->

    <script src="~/Scripts/jQuery/jquery-3.1.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Bootstrap/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Theme/jquery.slimscroll.js" type="text/javascript"></script>
    <script src="~/Scripts/Theme/js.cookie.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Theme/jquery.blockui.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Theme/bootstrap-switch.min.js" type="text/javascript"></script>
    <script src="~/Scripts/modernizr-2.6.2.js" type="text/javascript"></script>


    <script src="~/Scripts/Angular/angular.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Angular/angular-touch.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Angular/angular-route.min.js" type="text/javascript"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js" type="text/javascript"></script>
    <script src="~/Scripts/Angular/angular-confirm.js" type="text/javascript"></script>
    <script src="~/Scripts/Angular/angular-soundmanager2.js" type="text/javascript"></script>
    <script src="~/Scripts/Angular/angular-bootstrap-switch.js" type="text/javascript"></script>
    <script src="~/Scripts/Angular/rzslider.js" type="text/javascript"></script>

    <script src="~/Scripts/MyVoice/MyVoice.js" type="text/javascript"></script>
    <script src="~/Scripts/MyVoice/PhraseController.js" type="text/javascript"></script>
    <script src="~/Scripts/MyVoice/PhrasesService.js" type="text/javascript"></script>
    <script src="~/Scripts/MyVoice/ApiService.js" type="text/javascript"></script>
    <script src="~/Scripts/MyVoice/PhrasesFilter.js" type="text/javascript"></script>
    <script src="~/Scripts/MyVoice/EditPhrase/editPhraseController.js" type="text/javascript"></script>
    <script src="~/Scripts/MyVoice/Volume/VolumeController.js" type="text/javascript"></script>

    <script src="~/Scripts/Theme/toastr.js" type="text/javascript"></script>
    <script src="~/Scripts/Theme/app.js" type="text/javascript"></script>
    <script src="~/Scripts/Theme/layout.js" type="text/javascript"></script>
    <script src="~/Scripts/Theme/demo.js" type="text/javascript"></script>
    <script src="~/Scripts/md5.js" type="text/javascript"></script>
    <script src="~/Scripts/js.cookie-2.1.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/MyVoice/Custom.js" type="text/javascript"></script>
    
</body>
</html>