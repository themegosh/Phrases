
<sound-manager></sound-manager>
<h1 class="page-title">
    Phrases
    <small>total: {{phrases.length}}</small>
</h1>

<div class="todo-container">
    <div class="row">
        <div class="col-md-12">
            <div class="todo-projects-container">
                <div class="todo-padding-b-0">
                    <div class="todo-head">
                        <h2>Tap on a Phrase to hear it</h2>
                    </div>
                </div>
                <div ng-repeat="phrase in phrases | filter:filter()" ng-click="btnPlay(phrase)">
                    <div class="todo-projects-item clearfix">
                        <div class="todo-inline todo-float-r">
                            <button type="button" class="btn btn-icon-only btn-lg btn-warning" ng-click="btnEditPhrase(phrase, $event)"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
                            <button type="button" class="btn btn-icon-only btn-lg btn-danger" ng-click="btnDeletePhrase(phrase, $event)" confirm="Are you sure you want to delete this Phrase?" confirm-title="Please Confirm" confirm-ok="Yes"><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                        </div>
                        <div class="phrase">{{ phrase.title }}</div>
                    </div>
                    <div class="todo-projects-divider"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<br />
<br />Volume: {{ volume }} -
<button class="btn btn-default" music-volume data-type="increase">+</button>
<button class="btn btn-default" music-volume data-type="decrease">-</button>
<button class="btn btn-default" mute-music>Mute ({{ mute }})</button>

